<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.picodrive"
		name="Sega - MS/GG/MD/CD/32X (PicoDrive)"
		version="1.99.0.30"
		provider-name="notaz, fdave, irixxxx">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.genesis.6button" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>Genesis|Game Gear|SEGA Master System|Sega CD|Megadrive|Mega CD</platforms>
		<extensions>bin|gen|smd|md|32x|cue|iso|chd|sms|gg|sg|sc|m3u|68k|sgd|pco</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<requires_opengl>false</requires_opengl>
	</extension>
	<extension point="xbmc.addon.metadata">
		<license>MAME</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.picodrive</source>
		<assets>
			<icon>resources/icon.png</icon>
			<screenshot>resources/screenshot-01.jpg</screenshot>
			<screenshot>resources/screenshot-02.jpg</screenshot>
			<screenshot>resources/screenshot-03.jpg</screenshot>
		</assets>
		<summary lang="en_GB">Sega - MS/MD/CD/32X (PicoDrive) 1.98-</summary>
		<description lang="da_DK">PicoDrive er endnu en Sega Game Gear / Master System / Mega Drive / Mega CD / 32X emulator stærkt optimeret til ARM.</description>
		<description lang="en_GB">PicoDrive is yet another Sega Game Gear / Master System / Mega Drive / Mega CD / 32X emulator heavily optimized for ARM.</description>
		<description lang="es_ES">PicoDrive es otro emulador de Sega Game Gear / Master System / Mega Drive / Mega CD / 32X muy optimizado para ARM.</description>
		<description lang="zh_CN">PicoDrive 是另一款针对 ARM 进行了大量优化的 Sega Game Gear / Master System / Mega Drive / Mega CD / 32X 模拟器。</description>
		<disclaimer lang="da_DK">Forfattere: Dave (aka fdave, FinalBurn forfatter) og notaz</disclaimer>
		<disclaimer lang="en_GB">Authors: Dave (aka fdave, FinalBurn author) and notaz</disclaimer>
		<disclaimer lang="es_ES">Autores: Dave (alias fdave, autor de FinalBurn) y notaz</disclaimer>
		<disclaimer lang="zh_CN">作者：Dave（又名 fdave，FinalBurn 作者）和 notaz</disclaimer>
	</extension>
</addon>
